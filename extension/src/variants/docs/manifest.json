{
  "manifest_version": 3,
  "name": "IT Support",
  "description": "Your friendly IT support",
  "{{chrome}}.action": {},
  "{{firefox}}.browser_action": {},
  "permissions": ["storage", "tabCapture", "activeTab"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/pages/content/recorder-modal.tsx"]
    }
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["worklets/*", "style.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
