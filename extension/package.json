{
  "name": "@app2agent/extension",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "cross-env VARIANT=sidepanel vite dev",
    "dev:inject": "tsc && vite dev -c vite.inject.config.ts",
    "build:sidepanel": "tsc && cross-env VARIANT=sidepanel vite build",
    "build:content": "tsc && cross-env VARIANT=content vite build",
    "build:inject": "tsc && vite build -c vite.inject.config.ts",
    "build": "pnpm run clean && pnpm run build:sidepanel && pnpm run build:content && pnpm run build:inject",
    "lint": "eslint .",
    "preview": "vite preview",
    "release": "pnpm run build:sidepanel && node -e \"const AdmZip = require('adm-zip'); const zip = new AdmZip(); zip.addLocalFolder('./dist/sidepanel'); zip.addLocalFolder('./dist/sidepanel'); zip.writeZip('./dist/extension.zip');\""
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "eventemitter3": "^5.0.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.469.0",
    "pathe": "^1.1.2",
    "react": "^19",
    "react-dom": "^19",
    "react-markdown": "^9.0.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/chrome": "^0.0.254",
    "@types/lodash": "^4.17.13",
    "@types/node": "^20.17.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.3",
    "adm-zip": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "tailwindcss-scoped-preflight": "^3.4.10",
    "tslib": "^2.8.1",
    "typescript": "^5",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10",
    "vite-plugin-web-extension": "^4.3.1"
  }
}
